{
  "name": "eleventy-base-blog",
  "version": "5.0.2",
  "description": "A starter repository for a blog web site using the Eleventy static site generator.",
  "scripts": {
    "dev": "rm -rf _site && mkdir _site && mkdir _site/css && postcss css/tailwind.css > _site/css/tailwind.css && npx @11ty/eleventy --serve",
    "build": "ELEVENTY_PRODUCTION=true npx @11ty/eleventy && NODE_ENV=production postcss css/tailwind.css > _site/css/tailwind.css"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/11ty/eleventy-base-blog.git"
  },
  "author": {
    "name": "Zach Leatherman",
    "email": "zachleatherman@gmail.com",
    "url": "https://zachleat.com/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/11ty/eleventy-base-blog/issues"
  },
  "homepage": "https://github.com/11ty/eleventy-base-blog#readme",
  "devDependencies": {},
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-img": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.0",
    "autoprefixer": "^10.2.5",
    "luxon": "^1.26.0",
    "markdown-it": "^13.0.1",
    "markdown-it-anchor": "^5.3.0",
    "postcss-cli": "^8.3.1",
    "postcss-nesting": "^7.0.1",
    "sharp": "^0.31.3",
    "tailwindcss": "^2.0.3",
    "tailwindcss-counter": "^1.1.3"
  }
}
